import { createEnv } from "@t3-oss/env-nextjs";
import { z } from "zod";

export const env = createEnv({
  server: {<% serverVars.forEach(function(varInfo) { %>
    <%= varInfo.name %>: z.<%= varInfo.validationType %>()<%= varInfo.required ? '.min(1)' : '' %>,<% }); %>
  },
  client: {<% clientVars.forEach(function(varInfo) { %>
    <%= varInfo.name %>: z.<%= varInfo.validationType %>()<%= varInfo.required ? '.min(1)' : '' %>,<% }); %>
  },
  experimental__runtimeEnv: {<% clientVars.forEach(function(varInfo) { %>
    <%= varInfo.name %>: process.env.<%= varInfo.name %>,<% }); %>
  }
});
